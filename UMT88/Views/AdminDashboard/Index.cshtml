@model UMT88.ViewModels.AdminDashboardVm
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<main class="p-6 max-w-7xl mx-auto">
    <h2 class="text-3xl font-extrabold mb-8">Tổng quan hôm nay</h2>
    

    <!-- BOX -->
    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 hover:shadow-md transition">
            <p class="font-semibold text-xs uppercase tracking-wide text-gray-500">User online</p>
            <p class="text-3xl font-extrabold mt-2 text-gray-900">@Model.OnlineUsers</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 hover:shadow-md transition">
            <p class="font-semibold text-xs uppercase tracking-wide text-gray-500">Doanh thu (VNĐ)</p>
            <p class="text-3xl font-extrabold mt-2 text-gray-900">@Model.RevenueVnd.ToString("N0")</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 hover:shadow-md transition">
            <p class="font-semibold text-xs uppercase tracking-wide text-gray-500">Cược hôm nay (coin)</p>
            <p class="text-3xl font-extrabold mt-2 text-gray-900">@Model.BetsToday</p>
        </div>
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 hover:shadow-md transition">
            <p class="font-semibold text-xs uppercase tracking-wide text-gray-500">User mới</p>
            <p class="text-3xl font-extrabold mt-2 text-gray-900">@Model.NewUsersToday</p>
        </div>
    </section>

    <!-- BẢNG CƯỢC GẦN NHẤT -->
    <section class="bg-white rounded-lg shadow p-6">
        <h3 class="text-xl font-semibold mb-4 flex items-center gap-3">
            <i class="fas fa-history text-indigo-600"></i> Các cược gần đây
        </h3>
        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-300 text-gray-700 text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="border border-gray-300 p-3 text-left font-semibold">User</th>
                        <th class="border border-gray-300 p-3 text-left font-semibold">Trận</th>
                        <th class="border border-gray-300 p-3 text-left font-semibold">Stake</th>
                        <th class="border border-gray-300 p-3 text-left font-semibold">Thời gian</th>
                        <th class="border border-gray-300 p-3 text-left font-semibold">TT</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.RecentBets)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="border border-gray-300 p-3 font-medium">@r.UserName</td>
                            <td class="border border-gray-300 p-3">@r.MatchName</td>
                            <td class="border border-gray-300 p-3">@r.Stake.ToString("N0") coin</td>
                            <td class="border border-gray-300 p-3">@r.Time.ToString("HH:mm dd/MM")</td>
                            <td class="border border-gray-300 p-3">
                                @if (r.Status == "won")
                                {
                                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Thắng</span>
                                }
                                else if (r.Status == "lost")
                                {
                                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Thua</span>
                                }
                                else
                                {
                                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Chờ</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
