@*
  File:   Views/Shared/_Layout.cshtml
  Mục đích: Giữ toàn bộ phần <html>, <head>, <header> & @RenderBody()
*@

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - UMT88</title>

    <!-- Tailwind & fonts – giữ nguyên y chang HTML gốc -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-white text-gray-700">

    <!-- Header giữ nguyên -->
    <header class="flex items-center justify-between px-4 sm:px-6 md:px-10 py-3 border-b border-gray-200">
        <div class="flex items-center space-x-6 text-sm text-gray-700 font-semibold">
            <div class="flex items-center space-x-1">
                <span class="text-red-600">UMT</span><span>88</span>
            </div>

            <nav class="flex space-x-6">
                <a class="flex items-center space-x-1 hover:text-gray-900" href="#"><i class="fas fa-home text-xs"></i><span>Trang chủ</span></a>
                <a class="flex items-center space-x-1 hover:text-gray-900" href="#"><i class="fas fa-tags text-xs"></i><span>Cá cược</span></a>
                <a class="flex items-center space-x-1 hover:text-gray-900" href="#"><i class="fas fa-gem text-xs"></i><span>Nâng cấp</span></a>
                <a class="flex items-center space-x-1 hover:text-gray-900" href="#"><i class="fas fa-user text-xs"></i><span>Tài khoản</span></a>
                <a class="flex items-center space-x-1 hover:text-gray-900" href="#"><i class="fas fa-question-circle text-xs"></i><span>Trợ giúp</span></a>
            </nav>
        </div>

        <div class="flex items-center space-x-3">
            <button class="text-sm font-semibold px-4 py-1.5 rounded-md border border-blue-300 text-blue-600 hover:bg-blue-50 transition">Tạo tài khoản</button>
            <button class="text-sm font-semibold px-4 py-1.5 rounded-md bg-blue-600 text-white hover:bg-blue-700 transition">Đăng nhập</button>
            <img class="w-8 h-8 rounded-full" src="https://storage.googleapis.com/a1aa/image/ee0ad7c8-e33b-48db-93fa-30284dc7b134.jpg" alt="Avatar" />
        </div>
    </header>

    <!-- Nội dung mỗi trang -->
    @RenderBody()

    @* Section scripts nếu trang con cần *@
    @RenderSection("Scripts", required: false)
</body>
</html>
