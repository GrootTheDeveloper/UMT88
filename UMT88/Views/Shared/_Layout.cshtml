@*
  File:   Views/Shared/_Layout.cshtml
  Mục đích: Giữ toàn bộ phần <html>, <head>, <header> & @RenderBody()
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - UMT88</title>

    <!-- Tailwind & fonts – giữ nguyên y chang HTML gốc -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-white text-gray-700">

    <!-- Header giữ nguyên -->
    <header class="flex items-center justify-between px-4 sm:px-6 md:px-10 py-3 border-b border-gray-200">
        <!-- NAVIGATION -->
        <nav class="flex space-x-6">
            <div class="flex items-center space-x-1">
                <span class="text-red-600">UMT</span><span>88</span>
            </div>
            <!-- Trang chủ -->
            <a asp-controller="Home" asp-action="Index"
               class="flex items-center space-x-1 hover:text-gray-900">
                <i class="fas fa-home text-xs"></i><span>Trang chủ</span>
            </a>

            <!-- Cá cược -->
            <a asp-controller="Bet" asp-action="Index"
               class="flex items-center space-x-1 hover:text-gray-900">
                <i class="fas fa-tags text-xs"></i><span>Cá cược</span>
            </a>

            <!-- Nâng cấp -->
            <a asp-controller="Upgrade" asp-action="Index"
               class="flex items-center space-x-1 hover:text-gray-900">
                <i class="fas fa-gem text-xs"></i><span>Nâng cấp</span>
            </a>

            <!-- Tài khoản -->
            <a asp-controller="Account" asp-action="Profile"
               class="flex items-center space-x-1 hover:text-gray-900">
                <i class="fas fa-user text-xs"></i><span>Tài khoản</span>
            </a>

            <!-- Trợ giúp -->
            <a asp-controller="Help" asp-action="Index"
               class="flex items-center space-x-1 hover:text-gray-900">
                <i class="fas fa-question-circle text-xs"></i><span>Trợ giúp</span>
            </a>
        </nav>

        <!-- NÚT ĐĂNG KÝ & ĐĂNG NHẬP -->
        <div class="flex items-center space-x-3">
            <a asp-controller="Auth" asp-action="Register"
               class="text-sm font-semibold px-4 py-1.5 rounded-md border border-blue-300
              text-blue-600 hover:bg-blue-50 transition">
                Tạo tài khoản
            </a>

            <a asp-controller="Auth" asp-action="Login"
               class="text-sm font-semibold px-4 py-1.5 rounded-md bg-blue-600
              text-white hover:bg-blue-700 transition">
                Đăng nhập
            </a>

            <img class="w-8 h-8 rounded-full"
                 src="https://storage.googleapis.com/a1aa/image/ee0ad7c8-e33b-48db-93fa-30284dc7b134.jpg" alt="Avatar" />
        </div>

    </header>

    <!-- Nội dung mỗi trang -->
    @RenderBody()

    <!-- Footer UMT88 -->
    <footer class="bg-[#0B1226] text-[#9CA3AF] mt-16">
        <div class="max-w-7xl mx-auto px-6 py-10">
            <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-10 md:gap-0">
                <div class="md:w-1/3 space-y-3">
                    <h2 class="text-white font-semibold text-lg">
                        UMT<span class="text-[#EF4444]">88</span>
                    </h2>
                    <p class="text-sm leading-relaxed max-w-[280px]">
                        Nền tảng cá cược bóng đá hàng đầu Việt Nam. Cung cấp dịch vụ cá cược an toàn, minh bạch và đáng tin cậy.
                    </p>
                    <div class="flex space-x-4 text-[#9CA3AF] text-base">
                        <a href="#" aria-label="Facebook" class="hover:text-white"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Twitter" class="hover:text-white"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Instagram" class="hover:text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="YouTube" class="hover:text-white"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="md:w-1/3 space-y-3">
                    <h3 class="text-white font-semibold text-lg mb-3">Hỗ trợ</h3>
                    <ul class="text-sm space-y-2 max-w-[180px]">
                        <li>Trung tâm trợ giúp</li>
                        <li>Quy tắc cá cược</li>
                        <li>Cá cược có trách nhiệm</li>
                        <li>Điều khoản sử dụng</li>
                        <li>Chính sách bảo mật</li>
                    </ul>
                </div>
                <div class="md:w-1/3 space-y-3">
                    <h3 class="text-white font-semibold text-lg mb-3">Liên hệ</h3>
                    <ul class="text-sm space-y-3 max-w-[280px]">
                        <li class="flex items-center space-x-3">
                            <i class="fas fa-phone-alt text-[#9CA3AF]"></i>
                            <span>1900 1234</span>
                        </li>
                        <li class="flex items-center space-x-3">
                            <i class="far fa-envelope text-[#9CA3AF]"></i>
                            <span>support@umt88.com</span>
                        </li>
                        <li class="flex items-center space-x-3">
                            <i class="fas fa-map-marker-alt text-[#9CA3AF]"></i>
                            <span>TP. Hồ Chí Minh, Việt Nam</span>
                        </li>
                    </ul>
                    <button class="mt-2 bg-[#10B981] text-white rounded-lg px-5 py-2 text-sm font-medium hover:bg-[#0f9a6f] transition-colors"
                            type="button">
                        Hỗ trợ 24/7
                    </button>
                </div>
            </div>
            <hr class="border-t border-[#1F2937] mt-10" />
            <p class="text-center text-xs text-[#6B7280] mt-6 max-w-3xl mx-auto leading-relaxed">
                © 2024 UMT88. Tất cả quyền được bảo lưu.<br />
                Cá cược có thể gây nghiện. Vui lòng chơi có trách nhiệm. Chỉ dành cho người trên 18 tuổi.
            </p>
        </div>
    </footer>

    @* Section scripts nếu trang con cần *@
    @RenderSection("Scripts", required: false)
</body>
</html>
