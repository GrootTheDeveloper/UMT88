@{
    Layout = "_Layout";
    ViewData["Title"] = "Tạo tài khoản";
}

<div class="max-w-xl w-full mx-auto py-10">
    <h1 class="text-center text-[22px] font-semibold text-[#1a2a7f] mb-2">
        Tạo tài khoản
    </h1>
    <p class="text-center text-[14px] text-[#4b5563] mb-8">
        Hãy tạo tài khoản ngay để sử dụng các dịch vụ của
        <span class="font-bold text-red-600"> UMT88</span>
    </p>

    <form asp-action="Register" asp-controller="Auth" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <!-- Validation summary -->
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <div>
            <label for="name" class="block mb-1 text-[14px] font-semibold text-black">
                Tên đăng nhập
            </label>
            <div class="relative">
                <input id="name"
                       name="name"
                       type="text"
                       placeholder="Nhập tên đăng nhập của bạn"
                       required
                       class="w-full rounded-lg bg-[#f9fafb] text-[14px] placeholder:text-[#9ca3af]
                              py-3 pr-10 pl-4 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                <i class="fas fa-user absolute right-3 top-1/2 -translate-y-1/2
                          text-[#4b5563] text-[14px]" aria-hidden="true"></i>
            </div>
        </div>

        <div>
            <label for="email" class="block mb-1 text-[14px] font-semibold text-black">
                Email
            </label>
            <div class="relative">
                <input id="email"
                       name="email"
                       type="email"
                       placeholder="Nhập email của bạn"
                       required
                       class="w-full rounded-lg bg-[#f9fafb] text-[14px] placeholder:text-[#9ca3af]
                              py-3 pr-10 pl-4 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                <i class="fas fa-envelope absolute right-3 top-1/2 -translate-y-1/2
                          text-[#4b5563] text-[14px]" aria-hidden="true"></i>
            </div>
        </div>

        <div>
            <label for="password" class="block mb-1 text-[14px] font-semibold text-black">
                Mật khẩu
            </label>
            <div class="relative">
                <input id="password"
                       name="password"
                       type="password"
                       placeholder="Nhập mật khẩu của bạn"
                       required
                       minlength="6"
                       class="w-full rounded-lg bg-[#f9fafb] text-[14px] placeholder:text-[#9ca3af]
                      py-3 pr-10 pl-4 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                <i class="fas fa-lock absolute right-3 top-1/2 -translate-y-1/2
                  text-[#4b5563] text-[14px]" aria-hidden="true"></i>
            </div>
            <!-- Hiển thị lỗi độ dài mật khẩu -->
            @Html.ValidationMessage(
                     "password",        // key bạn dùng trong ModelState.AddModelError("password", ...)
                     "",                // text mặc định (ModelState đã chứa)
                     new { @class = "text-red-600 text-xs" }
                     )

        </div>

        <div>
            <label for="confirmPassword" class="block mb-1 text-[14px] font-semibold text-black">
                Xác nhận lại mật khẩu
            </label>
            <div class="relative">
                <input id="confirmPassword"
                       name="confirmPassword"
                       type="password"
                       placeholder="Xác nhận lại mật khẩu của bạn"
                       required
                       class="w-full rounded-lg bg-[#f9fafb] text-[14px] placeholder:text-[#9ca3af]
                              py-3 pr-10 pl-4 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                <i class="fas fa-lock absolute right-3 top-1/2 -translate-y-1/2
                          text-[#4b5563] text-[14px]" aria-hidden="true"></i>
            </div>
        </div>

        <button type="submit"
                class="bg-[#2563eb] text-white text-[14px] font-medium rounded-lg px-5 py-2.5 w-full">
            Đăng ký
        </button>
    </form>

    <p class="text-center mt-8 text-[14px] text-[#2563eb] underline">
        <a asp-controller="Auth" asp-action="Login">Tôi đã có tài khoản. Hãy đưa tôi đến Đăng nhập.</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
