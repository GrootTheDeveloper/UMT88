@{
    Layout = "_Layout";
    ViewData["Title"] = "Xác thực mã";
}

<main class="min-h-screen flex items-center justify-center px-4">
    <form asp-action="VerifyCode" asp-controller="Auth" method="post" class="w-full max-w-sm space-y-4">
        @Html.AntiForgeryToken()

        <h2 class="text-xl font-semibold text-center mb-2">Nhập mã xác thực</h2>

        <!-- LỖI CHUNG -->
        <div asp-validation-summary="All" class="text-red-600 text-sm mb-2"></div>

        <!-- MÃ FAKE -->
        @if (ViewBag.FakeCode != null)
        {
            <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-800 p-3 text-sm mb-2">
                Mã thử nghiệm: <strong>@ViewBag.FakeCode</strong>
            </div>
        }

        <input type="hidden" name="email" value="@ViewBag.Email" />

        <label class="block text-xs font-semibold mb-1" for="code">Mã</label>
        <input id="code" name="code" maxlength="4" required
               class="w-full rounded-md border p-2 text-center focus:outline-none focus:ring-2 focus:ring-blue-600" />

        <button type="submit"
                class="bg-blue-600 text-white w-full py-2 rounded-md text-sm font-semibold">
            Xác nhận
        </button>
    </form>
</main>
