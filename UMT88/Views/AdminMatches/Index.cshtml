@model List<UMT88.ViewModels.AdminMatches.MatchRowVm>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý trận đấu";
}
<section class="p-6 max-w-7xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <i class="fas fa-futbol text-indigo-600"></i> Danh sách trận
    </h2>

    <a asp-action="Create" class="mb-4 inline-block bg-blue-600 text-white text-xs font-semibold px-4 py-2 rounded">
        + Thêm trận
    </a>

    <div class="overflow-x-auto bg-white shadow rounded border">
        <table class="min-w-full text-sm">
            <thead class="bg-gray-50">
                <tr>
                    <th class="p-3 text-left">Giải</th>
                    <th class="p-3">Thời gian</th>
                    <th class="p-3">Đội nhà</th>
                    <th class="p-3">Đội khách</th>
                    <th class="p-3">Trạng thái</th>
                    <th class="p-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr class="border-t hover:bg-gray-50">
                        <td class="p-3">@r.Competition</td>
                        <td class="p-3">@r.StartTime</td>
                        <td class="p-3">@r.Home</td>
                        <td class="p-3">@r.Away</td>
                        <td class="p-3">@r.Status</td>
                        <td class="p-3 space-x-2">
                            <a asp-action="Edit" asp-route-id="@r.MatchId" class="text-xs text-blue-600 underline">Kèo</a>
                            <form asp-action="Delete" asp-route-id="@r.MatchId" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <button class="text-xs text-red-600 underline"
                                        onclick="return confirm('Xóa trận này?')">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
