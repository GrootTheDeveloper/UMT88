@model List<UMT88.ViewModels.BetHistoryRowVm>

<table class="w-full text-xs text-gray-900 border-collapse">
    <thead>
        <tr class="border-b border-gray-200 text-left">
            <th class="py-2 pr-3 w-6">⚽</th>
            <th class="py-2 pr-6">Trận đấu</th>
            <th class="py-2 pr-6">Loại kèo</th>
            <th class="py-2 pr-6">Kết quả</th>
            <th class="py-2 pr-6">Trạng thái</th>
            <th class="py-2 pr-6">Ngày</th>
            <th class="py-2">Kết quả cược</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="7" class="py-4 text-center text-gray-500">Chưa có dữ liệu</td></tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr class="border-b border-gray-200">
                    <td class="py-2 pr-3">⚽</td>
                    <td class="py-2 pr-6">@r.Match</td>
                    <td class="py-2 pr-6">@r.MarketType</td>
                    <td class="py-2 pr-6">
                        <span class="font-semibold @(r.IsWin ? "text-green-600" : (r.ResultText == "Chờ" ? "text-gray-500" : "text-red-600"))">
                            @r.ResultText
                        </span>
                    </td>
                    <td class="py-2 pr-6">@r.StatusText</td>
                    <td class="py-2 pr-6">@r.PlacedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="py-2">
                        @(r.Profit >= 0 ? $"Lãi {r.Profit:N0} xu" : $"Lỗ {Math.Abs(r.Profit):N0} xu")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
